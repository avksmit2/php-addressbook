<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <title>Contacts</title>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center well">Your Contacts</h1>
            <ul>
                {% for contact in contacts %}
                    <li>{{ contact.getFName }} {{contact.getLName }} <br>
                        Phone: {{ contact.getPhone }} <br>
                        Email address: {{ contact.getEmail }}<br>
                        Address: {{ contact.getStreet }}, {{ contact.getCity }}  {{ contact.getState }}, {{ contact.getZip }} <br>
                        {{ contact.getImg }}
                    </li>
                {% endfor %}
            </ul>
            <div class="row">
                <div class="col-sm-2">
                    <form action="/addName">
                        <button type="submit" class="btn btn-info">Add Contact</button>
                    </form>
                </div>
                <div class="col-sm-2">
                    <form action="/clearAll">
                        <button type="submit" class="btn btn-danger">Delete All</button>
                    </form>
                </div>
            </div>

            <form action="/searchResults" class="form-inline" method="post">
                <h2>Search for a contact:</h2>
                <div class="form-group">
                    <label for="searchName">Enter a First or Last Name</label>
                    <input id="searchName" name="searchName" type="text" class="form-control">
                </div>
                <button type="submit" class="btn btn-warning">Search</button>
            </form>
        </div>
    </body>
</html>
